{
    "name": "FB Automation",
    "version": "1.0",
    "description": "Search and send friend requests to any group members based on your keywords match",
    "icons": {
        "128": "automate-fb.png"
    },
    "browser_action":{
        "default_title": "FB Automation",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["*://*.facebook.com/groups/*"],
            "js": ["jquery.min.js","assets/jquery.toast.min.js","content.inj.js"],
            "css": ["content.inj.css","assets/jquery.toast.min.css"],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "tabs",
        "*://*.facebook.com/*", 
        "storage", 
        "activeTab"
    ],
    "manifest_version": 2
  }